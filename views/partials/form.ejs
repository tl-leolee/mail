<form action="/send" method="POST" class='form'>
  <div class='form-item'>
    <label for="email">Send To:</label>
    <input name="email" />
  </div>
  <div class='form-item'>
    <label for="subject">Subject:</label>
    <input name="subject" />
  </div>
  <div class='form-item'>
    <label for="message">Message:</label>
    <textarea name="message"></textarea>
  </div>
  <input type="submit">
</form>